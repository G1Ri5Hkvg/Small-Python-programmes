phrase=input("Enter your phrase: ")
phrase.lower()
l=len(phrase)
if l==1:
  print("Your phrase is a palindrome")
else:
  for i in range(0,len(phrase)//2):
    if phrase[i]==phrase[l-i-1]:
      result="Your phrase is a palindrome"
    else:
      result="Your phrase isn't a palindrome"
      break
  print(result)





phrase=input("Enter your phrase: ")
if phrase==phrase[::-1]:
  print("Your phrase is a palindrome")
else:
  print("Your phrase isn't a palindrome")
